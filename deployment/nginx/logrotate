# sample lighttpd logrotate configuration file
# Create the file $HOME/lighthttpd/logrotate with the following content:
"/home/username/lighttpd/access.log" "/home/username/lighttpd/error.log" {
           rotate 5
           size=10
           nocompress
           sharedscripts
           missingok
           postrotate
           /home/username/init/lighttpd restart
           endscript
}

# Add the following cronjob (crontab -e):
30 5 * * * /usr/sbin/logrotate -s $HOME/lighttpd/logrotate.status $HOME/lighttpd/logrotate

